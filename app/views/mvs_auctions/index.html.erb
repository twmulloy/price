<%- model_class = MvsAuction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:item_id) %></th>
      <th><%= model_class.human_attribute_name(:mvs_game_id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:thumb) %></th>
      <th><%= model_class.human_attribute_name(:auction_end) %></th>
      <th><%= model_class.human_attribute_name(:ended_at) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:approved) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mvs_auctions.each do |mvs_auction| %>
      <tr>
        <td><%= link_to mvs_auction.item_id, mvs_auction.url %></td>
        <td><%= link_to mvs_auction.mvs_game.title_english, edit_mvs_game_path(mvs_auction.mvs_game_id) %></td>
        <td><%= mvs_auction.title %></td>
        <td><%= image_tag mvs_auction.thumb %></td>
        <td><%= mvs_auction.auction_end %></td>
        <td><%= mvs_auction.ended_at %></td>
        <td><%= mvs_auction.price %></td>
        <td><%= mvs_auction.approved %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mvs_auction_path(mvs_auction), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mvs_auction_path(mvs_auction),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mvs_auction_path,
            :class => 'btn btn-primary' %>
