<%= form_for @mvs_auction, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :mvs_game_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :mvs_game_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :item_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :item_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :thumb, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :thumb, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :auction_end, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :auction_end, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ended_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :ended_at, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :approved, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :approved, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mvs_auctions_path, :class => 'btn' %>
  </div>
<% end %>
